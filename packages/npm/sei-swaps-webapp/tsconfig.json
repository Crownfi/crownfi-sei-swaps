{
	"compilerOptions": {
		"target": "es2020",
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"allowJs": true,
		"outDir": "./ts-build",
		"module": "NodeNext",
		"moduleResolution": "NodeNext"
	},
	"include": ["src/**/*"]
}
