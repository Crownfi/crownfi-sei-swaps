{
	"name": "@crownfi/csswap-mvp-frontend",
	"version": "0.0.1",
	"main": "dist/index.js",
	"license": "MIT",
	"scripts": {
		"start": "http-server -p 8080 ./dist",
		"build": "rm -rf dist/* && npm run build:html && npm run build:webpack",
		"build:html": "acetewm bundle-single -o ./dist/index.html ./src/ts",
		"build:webpack": "webpack",
		"codegen": "npm run codegen:elements && npm run codegen:schema && npm run codegen:pairs",
		"codegen:elements": "acetewm codegen ./src/ts",
		"codegen:pairs": "bash ../scripts/update_frontend_config.sh",
		"codegen:schema": "cd ../scripts && npm run codegen:schema"
	},
	"dependencies": {
		"@cosmjs/cosmwasm-stargate": "0.29.5",
		"@cosmjs/proto-signing": "0.29.5",
		"@cosmjs/stargate": "0.29.5",
		"@crownfi/sei-js-core": "^3.0.2-beta.1",
		"@popperjs/core": "^2.11.8",
		"bootstrap": "^5.3.2"
	},
	"devDependencies": {
		"@types/bootstrap": "^5.2.7",
		"buffer-lite": "^1.0.0",
		"css-loader": "^6.8.1",
		"http-server": "^14.1.1",
		"mini-css-extract-plugin": "^2.7.6",
		"ts-loader": "^9.4.4",
		"ts-node": "^10.9.1",
		"typescript": "^4.3.5",
		"webpack": "^5.88.2",
		"webpack-cli": "^5.1.4"
	}
}
