{
	"name": "@crownfi/csswap-mvp-frontend",
	"version": "0.0.2",
	"main": "dist/index.js",
	"license": "MIT",
	"scripts": {
		"start": "http-server -p 8080 -c-1 ./dist",
		"build": "rm -rf dist/* && mkdir -p dist && npm run build:html && npm run build:webpack && npm run build:copy-assets",
		"build:html": "acetewm bundle-single -o ./dist/index.html ./src/ts/csswap-mvp",
		"build:webpack": "webpack --mode=development",
		"build:webpack:final": "webpack --mode=production",
		"build:copy-assets": "rm -rf ./dist/assets && mkdir -p ./dist/assets && cp -R ./assets/* ./dist/assets",
		"build:final": "rm -rf dist/* && mkdir -p dist && npm run build:html && npm run build:webpack:final && npm run build:copy-assets",
		"bloat-finder": "webpack --json > stats.json",
		"codegen": "npm run codegen:elements && npm run codegen:schema && npm run codegen:pairs",
		"codegen:elements": "acetewm codegen ./src/ts/csswap-mvp",
		"codegen:pairs": "bash ../scripts/update_frontend_config.sh",
		"codegen:schema": "cd ../scripts && npm run codegen:schema"
	},
	"dependencies": {
		"@cosmjs/cosmwasm-stargate": "0.29.5",
		"@cosmjs/proto-signing": "0.29.5",
		"@cosmjs/stargate": "0.29.5",
		"@crownfi/sei-js-core": "^3.0.2-beta.1"
	},
	"devDependencies": {
		"@ungap/custom-elements": "^1.3.0",
		"buffer-lite": "^2.0.1",
		"css-loader": "^6.8.1",
		"css-minimizer-webpack-plugin": "^5.0.1",
		"http-server": "^14.1.1",
		"mini-css-extract-plugin": "^2.7.6",
		"ts-loader": "^9.4.4",
		"ts-node": "^10.9.1",
		"typescript": "^5.2.2",
		"webpack": "^5.88.2",
		"webpack-cli": "^5.1.4"
	}
}
